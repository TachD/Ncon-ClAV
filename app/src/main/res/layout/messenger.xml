<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/material_blue_grey_900"
              android:weightSum="1">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etMsg" android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/ivSend" android:hint="Your message..."
                android:textColor="@color/material_grey_600"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivSend"
                android:src="@drawable/ic_menu_send_msg" android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" android:layout_alignTop="@+id/etMsg"
                android:baselineAlignBottom="false"/>
        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lvMesg" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_above="@+id/etMsg"/>
    </RelativeLayout>
</LinearLayout>