<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="ncon.barsu.edu.client.RecoveryActivity"
        android:clickable="true" android:background="@color/material_blue_grey_900">

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editRecEmail" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="50dp" android:textColorHint="#64ffffff"
            android:textColor="#ffffff" android:hint="Enter e-mail"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Recovery"
            android:id="@+id/btnRecContinue"
            android:textColor="#ffffff"
            android:background="@color/material_blue_grey_800" android:layout_below="@+id/editRecEmail"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="An Email with a confirmation code will be sent to the specified e-mail"
            android:id="@+id/textView" android:layout_below="@+id/btnRecContinue" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="40dp" android:textColor="#ffffff"/>
</RelativeLayout>
