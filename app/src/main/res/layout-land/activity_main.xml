<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="ncon.barsu.edu.client.MainActivity"
        android:background="@color/material_blue_grey_900">

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:id="@+id/btnAuth"
            android:textColor="#ffffff"
            android:background="@color/material_blue_grey_800"
            android:layout_below="@+id/btnRecovery" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_toLeftOf="@+id/LogoView"
            android:layout_toStartOf="@+id/LogoView"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/LogoView"
            android:src="@drawable/logo"
            android:layout_toRightOf="@+id/editNick"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/editPass"
            android:textColor="#ffffff"
            android:hint="Password" android:textColorHint="#64ffffff"
            android:layout_alignBottom="@+id/btnRecovery"
            android:layout_toLeftOf="@+id/btnRecovery"/>
    <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:id="@+id/editNick"
            android:textColor="#ffffff"
            android:hint="Nickname" android:textColorHint="#64ffffff"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:id="@+id/btnSingin"
            android:background="#00ffffff"
            android:textColor="#ffffff"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerVertical="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_toLeftOf="@+id/LogoView"
            android:layout_toStartOf="@+id/LogoView" android:layout_below="@+id/btnAuth"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot ?"
            android:id="@+id/btnRecovery"
            android:background="#00ffffff" android:textColor="#64ffffff"
            android:layout_below="@+id/editNick"
            android:layout_toLeftOf="@+id/LogoView"/>
</RelativeLayout>
